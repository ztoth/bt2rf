<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/button1" android:layout_gravity="center_horizontal"
        android:onClick="sendOne"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/button2" android:layout_gravity="center_horizontal"
        android:onClick="sendTwo"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/button3" android:layout_gravity="center_horizontal"
        android:onClick="sendThree"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/button4" android:layout_gravity="center_horizontal"
        android:onClick="sendFour"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/button5" android:layout_gravity="center_horizontal"
        android:onClick="sendFive"/>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:id="@+id/button" android:layout_column="11"
            android:onClick="quitSwitch"/>
        <TextView
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_column="0"
            android:text=""/>
    </TableRow>
</TableLayout>
